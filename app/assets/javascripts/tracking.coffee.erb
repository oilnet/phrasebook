_paq = _paq or []
_paq.push [ 'trackPageView' ]
_paq.push [ 'enableLinkTracking' ]
$(document).on 'turbolinks:load', ->
  u = '//<%= Rails.application.secrets[:piwik_fqdn] %>/'
  _paq.push [
    'setTrackerUrl'
    u + 'piwik.php'
  ]
  _paq.push [
    'setSiteId'
    <%= Rails.application.secrets[:piwik_id] %>
  ]
  d = document
  g = d.createElement('script')
  s = d.getElementsByTagName('script')[0]
  g.type = 'text/javascript'
  g.async = true
  g.defer = true
  g.src = u + 'piwik.js'
  s.parentNode.insertBefore g, s
  return
