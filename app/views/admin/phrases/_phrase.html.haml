= simple_form_for [:admin, @phrase], remote: true, authenticity_token: true, multipart: true do |p|
  = p.input :approved
  = p.input :tags
  = p.input :usefulness
  = p.input :image_data, as: :file
  - if @phrase.image_data
    = image_tag admin_phrase_path(@phrase, format: :jpg)
  - @phrase.translations.each do |translation|
    = p.simple_fields_for :translations, translation do |translation_fields|
      = render 'translation', {t: translation_fields}
  = p.submit
  = link_to "Übersetzung hinzufügen", {}, class: 'button'
