%h1= phrase_heading
= simple_form_for [:admin, @phrase], authenticity_token: true, multipart: true do |p|

  -# -------------
  -# Phrase itself
  -# -------------
  %fieldset.phrase
    = p.input :tags, label: 'Schlagwörter'
    = p.input :usefulness, label: 'Nützlichkeitswert', as: :integer, input_html: {min: 0, step: 1}
    = p.input :approved, label: 'Publiziert'
  %fieldset.image_metadata
    = p.input :image_source, label: 'Bildquelle', as: :url
    = p.input :image_license, label: 'Lizenz'
  %fieldset.image
    = p.input :image_data, as: :file, label: 'Bild'
    = image_tag phrase_path(@phrase, format: :jpg), style: display_none_if_no_image
    = link_to fa_icon(:remove), {}, class: 'delete', style: display_none_if_no_image

  -# ------------
  -# Translations
  -# ------------
  - @phrase.translations.each do |translation|
    = p.simple_fields_for :translations, translation do |translation_fields|
      = render 'translation', {t: translation_fields}

  -# ----------
  -# Bottom row
  -# ----------
  %fieldset.buttons
    = link_to "Phrase und Übersetzungen löschen", [:admin, @phrase], method: :delete, data: {confirm: "Ganz sicher?"}, class: 'delete'
    = link_to "Übersetzung hinzufügen", {}, class: 'add_translation button'
    = p.submit "Speichern"
