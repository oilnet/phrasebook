= simple_form_for @phrase, html: {multipart: true} do |f|

  - if @phrase.errors.any?
    #error_explanation
      %h2= t('simple_form.error_notification.default_message')
      %ul
        - @phrase.errors.full_messages.each do |msg|
          %li= msg
  .row
    .large-12.columns
      = f.input :text
      = f.input :approved if admin?
  .row
    .large-6.columns
    
      = render partial: "application/record_with_#{browser.audio_recording_capabilities.first}", locals: {f: f, i: @phrase}
      
    .large-6.columns
      = f.input :tags
  .row
    .large-12.columns
      = f.label "Speichern, undâ€¦"
      %ul.button-group
        = f.submit t('.commit_add_translation'), {name: 'commit[new_translation]', class: 'button'}
        = f.submit t('.commit_new_phrase'), {name: 'commit[new_phrase]', class: 'button'}
        = f.submit t('.commit_show_list'), {name: 'commit[show_list]', class: 'button'}
%h1 &nbsp;
