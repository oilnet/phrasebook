= form_for @phrase do |f|
  - if @phrase.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phrase.errors.count, "error")} prohibited this phrase from being saved:"
      %ul
        - @phrase.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_area :text
  .field
    = f.label :tags
    = f.text_field :tags
  /
    .field
      = f.label :rec_filename
      = f.text_field :rec_filename
    .field
      = f.label :rec_filetype
      = f.text_field :rec_filetype
    .field
      = f.label :rec_contents
      = f.text_field :rec_contents
  .field
    = f.label :usefulness
    = f.number_field :usefulness
  .actions
    = f.submit 'Save'
