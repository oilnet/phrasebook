= form_tag(phrases_path, method: :get, id: :search, class: 'search-bar', role: :search, remote: true) do
  = text_field_tag :search, params[:search], placeholder: t('.search_placeholder', default: 'Word or phrase?'), type: :search, autofocus: true, autocomplete: :off
  = button_tag type: :submit do
    = image_tag 'search-icon-black.png', alt: t('.search', default: 'Search')
#phrases_list
  = render @phrases
