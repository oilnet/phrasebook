= form_for @translation do |f|
  - if @translation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@translation.errors.count, "error")} prohibited this translation from being saved:"
      %ul
        - @translation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :phrase
    = f.collection_select :phrase_id, Phrase.all, :id, :text
  .field
    = f.label :original
    = f.text_area :original
  .field
    = f.label :transliteration
    = f.text_area :transliteration
  /  
    .field
      = f.label :rec_filename
      = f.text_field :rec_filename
    .field
      = f.label :rec_filetype
      = f.text_field :rec_filetype
    .field
      = f.label :rec_contents
      = f.text_field :rec_contents
  .field
    = f.label :lang, "Language (ISO 639-1: Codes for the representation of languages)"
    = f.collection_select :lang, FbLanguage.all, :code, :name, {selected: 'ar'}
  .field
    = f.label :country, "Country (ISO 3166-1: Codes for the names of countries)"
    = f.collection_select :country, FbCountry.all, :code, :name, {include_blank: true}
  .actions
    = f.submit 'Save'
